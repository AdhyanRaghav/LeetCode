class Solution {
    public static String resultingString(String s) {

        StringBuilder sb = new StringBuilder(s);

        for (int i = 0; i < sb.length()-1; i++) {

            char p1 = sb.charAt(i);
            char p2 = sb.charAt(i + 1);

            if (Math.abs(p1-p2)==1 || Math.abs(p1-p2)==25) {
                sb.deleteCharAt(i);
                sb.deleteCharAt(i);
                i = Math.max(-1, i - 2);

            }
        }
        return sb.toString();
    }
}
